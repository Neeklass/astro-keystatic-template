---
import BaseLayout from '../layouts/BaseLayout.astro';
import SocialLinks from '../components/SocialLinks.astro';
import { createReader } from '@keystatic/core/reader';
import keystaticConfig from '../../keystatic.config';

// Keystatic Reader initialisieren
const reader = createReader(process.cwd(), keystaticConfig);

// Daten aus Keystatic laden
const siteSettings = await reader.singletons.siteSettings.read();
const homepage = await reader.singletons.homepage.read();

// Fallback-Werte für den Fall, dass noch keine Daten im CMS sind
const siteName = siteSettings?.siteName || 'Meine Website';
const heroHeading = homepage?.heroHeading || 'Willkommen auf Ihrer neuen Website';
const heroSubheading = homepage?.heroSubheading || 'Bearbeiten Sie diese Inhalte im Keystatic CMS unter /keystatic';
const heroBackgroundImage = homepage?.heroBackgroundImage || '/assets/images/placeholder.jpg';
const heroCtaText = homepage?.heroCtaText || 'Los geht\'s';
const heroCtaLink = homepage?.heroCtaLink || '#mehr-erfahren';
---

<BaseLayout 
  title={homepage?.seoTitle || heroHeading}
  description={homepage?.seoDescription || siteSettings?.siteDescription || heroSubheading}
  image={heroBackgroundImage}
  siteName={siteName}
>
  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100">
    <div class="container mx-auto px-4 py-16">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Text Content -->
        <div class="space-y-6">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
            {heroHeading}
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed">
            {heroSubheading}
          </p>
          
          <!-- CTA Buttons -->
          <div class="flex flex-wrap gap-4 pt-4">
            <a 
              href={heroCtaLink} 
              class="inline-block px-8 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition-colors duration-200 shadow-lg hover:shadow-xl"
            >
              {heroCtaText}
            </a>
            <a 
              href="/keystatic" 
              class="inline-block px-8 py-3 bg-white text-indigo-600 font-semibold rounded-lg border-2 border-indigo-600 hover:bg-indigo-50 transition-colors duration-200"
            >
              CMS öffnen
            </a>
          </div>

          <!-- Social Links (wenn vorhanden) -->
          {siteSettings?.socialLinks && (
            <div class="pt-6">
              <SocialLinks 
                socialLinks={siteSettings.socialLinks}
                iconSize="w-6 h-6"
                iconColor="text-gray-600 hover:text-indigo-600"
              />
            </div>
          )}
        </div>

        <!-- Hero Visual -->
        <div class="relative">
          {heroBackgroundImage && (
            <div class="aspect-square rounded-2xl overflow-hidden shadow-2xl">
              <img 
                src={heroBackgroundImage} 
                alt="Hero visual"
                class="w-full h-full object-cover"
                loading="eager"
              />
            </div>
          )}
          {/* Optional: Logo anzeigen falls vorhanden */}
          {siteSettings?.logo && (
            <div class="absolute -bottom-6 -left-6 bg-white p-4 rounded-xl shadow-lg">
              <img 
                src={siteSettings.logo} 
                alt={`${siteName} Logo`}
                class="h-16 w-auto"
              />
            </div>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Info Section -->
  <section id="mehr-erfahren" class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">
          Nächste Schritte
        </h2>
        <div class="prose prose-lg mx-auto text-gray-600">
          <p>
            Diese Website wurde mit <strong>Astro</strong>, <strong>Keystatic CMS</strong> und <strong>Tailwind CSS</strong> erstellt.
          </p>
          <p>
            Um Inhalte zu bearbeiten, öffnen Sie das <a href="/keystatic" class="text-indigo-600 hover:text-indigo-700 font-semibold">Keystatic CMS</a>.
            Dort können Sie alle Texte, Bilder und Einstellungen Ihrer Website verwalten.
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

