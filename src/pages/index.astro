---
import BaseLayout from '../layouts/BaseLayout.astro';
import { createReader } from '@keystatic/core/reader';
import keystaticConfig from '../../keystatic.config';

// Keystatic Reader initialisieren
const reader = createReader(process.cwd(), keystaticConfig);

// Daten aus Keystatic laden
const siteSettings = await reader.singletons.siteSettings.read();
const homepage = await reader.singletons.homepage.read();

// Fallback-Werte für den Fall, dass noch keine Daten im CMS sind
const siteName = siteSettings?.siteName || 'Meine Website';
const heroHeading = homepage?.heroHeading || 'Willkommen auf Ihrer neuen Website';
const heroSubheading = homepage?.heroSubheading || 'Bearbeiten Sie diese Inhalte im Keystatic CMS unter /keystatic';
const heroBackgroundImage = homepage?.heroBackgroundImage || '/assets/images/placeholder.jpg';
const heroCtaText = homepage?.heroCtaText || 'Los geht\'s';
const heroCtaLink = homepage?.heroCtaLink || '#mehr-erfahren';
---

<BaseLayout 
  title={homepage?.seoTitle || heroHeading}
  description={homepage?.seoDescription || siteSettings?.siteDescription || heroSubheading}
  image={heroBackgroundImage}
  siteName={siteName}
>
  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100">
    <div class="container mx-auto px-4 py-16">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Text Content -->
        <div class="space-y-6">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
            {heroHeading}
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed">
            {heroSubheading}
          </p>
          
          <!-- CTA Buttons -->
          <div class="flex flex-wrap gap-4 pt-4">
            <a 
              href={heroCtaLink} 
              class="inline-block px-8 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition-colors duration-200 shadow-lg hover:shadow-xl"
            >
              {heroCtaText}
            </a>
            <a 
              href="/keystatic" 
              class="inline-block px-8 py-3 bg-white text-indigo-600 font-semibold rounded-lg border-2 border-indigo-600 hover:bg-indigo-50 transition-colors duration-200"
            >
              CMS öffnen
            </a>
          </div>

          <!-- Social Links (wenn vorhanden) -->
          {siteSettings?.socialLinks && (
            <div class="flex gap-4 pt-6">
              {siteSettings.socialLinks.facebook && (
                <a 
                  href={siteSettings.socialLinks.facebook} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-gray-600 hover:text-indigo-600 transition-colors"
                  aria-label="Facebook"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                </a>
              )}
              {siteSettings.socialLinks.instagram && (
                <a 
                  href={siteSettings.socialLinks.instagram} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-gray-600 hover:text-indigo-600 transition-colors"
                  aria-label="Instagram"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
                </a>
              )}
              {siteSettings.socialLinks.twitter && (
                <a 
                  href={siteSettings.socialLinks.twitter} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-gray-600 hover:text-indigo-600 transition-colors"
                  aria-label="Twitter/X"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                </a>
              )}
              {siteSettings.socialLinks.linkedin && (
                <a 
                  href={siteSettings.socialLinks.linkedin} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-gray-600 hover:text-indigo-600 transition-colors"
                  aria-label="LinkedIn"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                </a>
              )}
            </div>
          )}
        </div>

        <!-- Hero Visual -->
        <div class="relative">
          {heroBackgroundImage && (
            <div class="aspect-square rounded-2xl overflow-hidden shadow-2xl">
              <img 
                src={heroBackgroundImage} 
                alt="Hero visual"
                class="w-full h-full object-cover"
                loading="eager"
              />
            </div>
          )}
          {/* Optional: Logo anzeigen falls vorhanden */}
          {siteSettings?.logo && (
            <div class="absolute -bottom-6 -left-6 bg-white p-4 rounded-xl shadow-lg">
              <img 
                src={siteSettings.logo} 
                alt={`${siteName} Logo`}
                class="h-16 w-auto"
              />
            </div>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Info Section -->
  <section id="mehr-erfahren" class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">
          Nächste Schritte
        </h2>
        <div class="prose prose-lg mx-auto text-gray-600">
          <p>
            Diese Website wurde mit <strong>Astro</strong>, <strong>Keystatic CMS</strong> und <strong>Tailwind CSS</strong> erstellt.
          </p>
          <p>
            Um Inhalte zu bearbeiten, öffnen Sie das <a href="/keystatic" class="text-indigo-600 hover:text-indigo-700 font-semibold">Keystatic CMS</a>.
            Dort können Sie alle Texte, Bilder und Einstellungen Ihrer Website verwalten.
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

